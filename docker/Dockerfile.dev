# Development container for pg_lakehouse
# Integrates PostgreSQL 16, Apache Arrow, and Apache Iceberg C++

FROM ubuntu:24.04

LABEL maintainer="pg_lakehouse developers"
LABEL description="Development environment for pg_lakehouse - PostgreSQL Lakehouse Extension"

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# PostgreSQL version
ENV PG_MAJOR=16

# Build configuration
ENV CC=gcc-14
ENV CXX=g++-14

# Install base dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Build essentials
    bash-completion \
    build-essential \
    ccache \
    cmake \
    curl \
    gcc-14 \
    g++-14 \
    git \
    gnupg2 \
    htop \
    lsb-release \
    meson \
    ninja-build \
    pkg-config \
    sudo \
    vim \
    wget \
    # Development libraries
    bison \
    flex \
    libboost-all-dev \
    libcurl4-openssl-dev \
    libedit-dev \
    libicu-dev \
    liblz4-dev \
    libpam0g-dev \
    libreadline-dev \
    libselinux1-dev \
    libssl-dev \
    libsystemd-dev \
    libxml2-dev \
    libxslt1-dev \
    libzstd-dev \
    python3 \
    python3-pip \
    uuid-dev \
    zlib1g-dev \
    # Clang tools for development
    clang-format \
    clangd \
    && rm -rf /var/lib/apt/lists/*

# Add PostgreSQL APT repository and install PostgreSQL 16 development files
RUN curl -fsSL https://www.postgresql.org/media/keys/ACCC4CF8.asc | gpg --dearmor -o /usr/share/keyrings/postgresql-keyring.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/postgresql-keyring.gpg] http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
    postgresql-${PG_MAJOR} \
    postgresql-client-${PG_MAJOR} \
    postgresql-server-dev-${PG_MAJOR} \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Set PostgreSQL paths
ENV PATH="/usr/lib/postgresql/${PG_MAJOR}/bin:${PATH}"
ENV PG_CONFIG="/usr/lib/postgresql/${PG_MAJOR}/bin/pg_config"

# Install pre-commit for linting
RUN pip3 install --break-system-packages pre-commit cmake-format

# Create development user
RUN useradd -ms /bin/bash lakehouse \
    && usermod -aG sudo lakehouse \
    && echo "lakehouse ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/lakehouse \
    && chmod 0440 /etc/sudoers.d/lakehouse

# Create necessary directories
RUN mkdir -p /workspace \
    && mkdir -p /data/minio \
    && mkdir -p /var/lib/postgresql/data \
    && chown -R lakehouse:lakehouse /workspace \
    && chown -R postgres:postgres /var/lib/postgresql

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Set working directory
WORKDIR /workspace

# Switch to development user by default
USER lakehouse

# Default command
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
CMD ["bash"]
